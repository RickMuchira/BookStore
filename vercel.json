{
    "version": 2,
    "builds": [
      {
        "src": "api/index.php",
        "use": "@vercel/php"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "public/build",
          "buildCommand": "npm install && npm run build"
        }
      }
    ],
    "routes": [
      {
        "src": "/build/(.*)",
        "dest": "/build/$1",
        "headers": { "cache-control": "public,max-age=31536000,immutable" }
      },
      {
        "src": "/api/(.*)",
        "dest": "/api/index.php"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/.*",
        "dest": "/index.php"
      }
    ]
  }
  